<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.SellerAddNewProductFragment"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/img_btn_go_back_admin_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/back"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_select_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/select_product_image"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:id="@+id/edit_txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Product Name"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:backgroundTint="@android:color/black"
            android:inputType="textPersonName"
            android:layout_below="@id/img_select_product"
            />

        <EditText
            android:id="@+id/edit_txt_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Product Description"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:backgroundTint="@android:color/black"
            android:inputType="textPersonName"
            android:layout_below="@id/edit_txt_product_name"
            />

        <EditText
            android:id="@+id/edit_txt_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Product Price"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:backgroundTint="@android:color/black"
            android:inputType="number"
            android:layout_below="@id/edit_txt_product_description"
            />

        <Button
            android:id="@+id/btn_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Add Product"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/edit_txt_product_price"
            />


    </RelativeLayout>

</LinearLayout>