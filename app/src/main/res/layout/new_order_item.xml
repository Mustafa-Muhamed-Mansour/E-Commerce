<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txt_new_order_item_full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:backgroundTint="@android:color/black"
                android:padding="10dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/txt_new_order_item_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:backgroundTint="@android:color/black"
                android:gravity="end"
                android:padding="10dp"
                android:layout_margin="5dp"
                />



        </LinearLayout>


        <TextView
            android:id="@+id/txt_new_order_item_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:backgroundTint="@android:color/black"
            android:gravity="center"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txt_new_order_item_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:backgroundTint="@android:color/black"
            android:gravity="center"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txt_new_order_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:backgroundTint="@android:color/black"
            android:layout_gravity="center"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txt_new_order_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:backgroundTint="@android:color/black"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/txt_new_order_item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:backgroundTint="@android:color/black"
                android:gravity="end"
                android:padding="10dp"
                />



        </LinearLayout>

        <Button
            android:id="@+id/btn_show_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show this Order Products"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            />


    </LinearLayout>



</androidx.cardview.widget.CardView>